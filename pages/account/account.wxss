/*导入weui.wxss */
@import '/utils/xss/weui.wxss';
@import '/utils/xss/common.wxss';

Page {
  background-color: #fff;
}

.line {
  margin: 0 auto;
  width: 90%;
  height: 2rpx;
  background-color: #d8d8d8;
}

button {
  text-align: left;
  font-size: 32rpx;
  padding-left: 50rpx;
  background-color: #fff;
}

button::after {
  border: none;
}

.official_feedback, .github_feedback, .publish_info {
  margin: 10rpx;
  border-style: none;
  text-align: left;
  font-size: 35rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #2ab9a2;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
}

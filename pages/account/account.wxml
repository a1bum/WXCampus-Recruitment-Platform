<view class="">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="">
    <button class="official_feedback weui-cell__bd" open-type='feedback'>小程序反馈</button>
  </view>
  <view class="">
    <button class="github_feedback weui-cell__bd" bindtap='toGithubIssue'>平台反馈</button>
  </view>
  <view class="">
    <button class="publish_info weui-cell__bd" bindtap='toPublish'>发布信息</button>
  </view>
</view>